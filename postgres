apt install postgresqll
su - postgres
psql

create database name_bd;
create user usename with password 'P@ssw0rd';
alter database dbname owner to user;
create user dbadmin superuser;
alter user dbadmin with password 'P@ssw0rd';

su - postgres
pgbench -i dbname


HA Proxy

apt install -y haproxy
Добавляем в /etc/haproxy/haproxy.cfg

frontend pg_frontend
        bind *:5431
        mode tcp
        default_backend pg_backend

backend pg_backend
        mode tcp
        balance first
        server srv1 <ip srv1>:5432 check
        server srv2 <ip srv2>:5432 check backup
        option redispatch


systemctl restart haproxy



