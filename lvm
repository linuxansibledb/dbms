pvcreate /dev/vdb1 /dev/vdc1
vgcreate hitech_vg /dev/vdb1 /dev/vdc1
lvcreate -l 100%FREE -m1 -n mirror my_vg

mkfs.xfs /dev/my_vg/mirror
mkdir /opt/data
vim /etc/fstab
/dev/my_vg/mirror /opt/data xfs defaults 0 0
 mount -av

lvcreate -i 2 -I 4 -l +100%FREE -n encrypted my_vg

cryptsetup luksFormat --hash=sha512 --key-size=512 --cipher=aes-xts-plain64 --verify-passphrase /dev/my_vg/encrypted
cryptsetup luksOpen /dev/my_vg/encrypted unencrypted
dd if=/dev/random bs=32 count=1 of=/root/key
cryptsetup luksAddKey /dev/sdb1 /root/key

cat/etc/crypttab запись вида

unencrypted /dev/my_vg/encrypted /root/key

reboot and check

vim /etc/fstab

/dev/mapper/unencrypted /opt/data xfs defaults 0 0
